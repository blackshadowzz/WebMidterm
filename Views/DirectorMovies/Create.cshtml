@model WebMidterm.Models.DirectorMovie

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["TitleForm"] = "Assign Director To Movie";
    ViewData["SubNavbar"] = "director";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Director" class="control-label">Director</label>
                    <select asp-for="DirectorId" class="form-control" asp-items="ViewBag.DirectorId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Movie" class="control-label">Movie Title</label>
                    <ul style="list-style-type:none;">
                        @foreach (var m in ViewBag.MovieId)
                        {

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="Id" value="@m.Id" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    @m.Title
                                </label>
                            </div>

                        }
                    </ul>
                </div>
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Assign Movie" class="btn btn-primary" />
                    <div>
                        <a asp-action="Index" class="btn btn-outline-info mx-3">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>


