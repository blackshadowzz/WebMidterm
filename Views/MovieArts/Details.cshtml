@model WebMidterm.Models.MovieArt

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["TitleForm"] = "Movie Art";
    ViewData["SubNavbar"] = "movieart";
}


<div class="container">
    <div class="row">
        <div class="col-md-3">
             
            <div>
                <img src="~/images/@Model.ArtistUrl" />
            </div>
        </div>
         <div class="col-md-9">
              <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ArtName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ArtName)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Artist)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Artist)
                </dd>
    
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Movie)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Movie.Title)
                </dd>
            </dl>
        </div>
    </div>
   
</div>
<div class="d-flex justify-content-between"> 
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary">Edit</a> |
    <div>
        <a asp-action="Index" class="btn btn-outline-info bi bi-arrow-right-square"></a>
    </div>
</div>
